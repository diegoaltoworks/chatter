{
  "name": "@diegoaltoworks/chatter-client",
  "version": "1.0.0",
  "description": "Isomorphic TypeScript chatbot client widgets for Chatter framework",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "unpkg": "dist/chatbot.min.js",
  "jsdelivr": "dist/chatbot.min.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./style.css": "./dist/chatbot.css"
  },
  "files": ["dist"],
  "scripts": {
    "build": "bun run clean && bun run build:types && bun run build:esm && bun run build:cjs && bun run build:browser && bun run build:css",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "build:esm": "bunx esbuild src/index.ts --bundle --format=esm --outfile=dist/index.mjs --external:node-fetch --platform=neutral --target=es2020",
    "build:cjs": "bunx esbuild src/index.ts --bundle --format=cjs --outfile=dist/index.js --external:node-fetch --platform=neutral --target=es2020",
    "build:browser": "bunx esbuild src/browser.ts --bundle --format=iife --outfile=dist/chatbot.min.js --minify --global-name=Chatter --platform=browser --target=es2020",
    "build:css": "cp src/styles.css dist/chatbot.css",
    "clean": "rm -rf dist",
    "dev": "bun run build -- --watch",
    "typecheck": "tsc --noEmit",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "keywords": ["chatbot", "api-client", "typescript", "isomorphic", "ui-components"],
  "author": "Diego Alto",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "esbuild": "^0.20.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {},
  "dependencies": {}
}
