{
  "name": "@diegoaltoworks/chatter",
  "version": "0.2.0",
  "description": "Embeddable AI chatbot framework with RAG, authentication, and customizable widgets",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.mjs",
      "require": "./dist/client/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.mjs",
      "require": "./dist/server.js"
    }
  },
  "files": ["dist", "README.md", "LICENSE"],
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun run build:clean && bun run build:types && bun run build:esm && bun run build:cjs && bun run build:client",
    "build:clean": "rm -rf dist",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "build:esm": "esbuild src/index.ts --bundle --format=esm --outfile=dist/index.mjs --external:hono --external:openai --external:@libsql/client --external:jose --platform=node --target=node18",
    "build:cjs": "esbuild src/index.ts --bundle --format=cjs --outfile=dist/index.js --external:hono --external:openai --external:@libsql/client --external:jose --platform=node --target=node18",
    "build:client": "cd src/client && bun run build",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run lint && bun run typecheck && bun run test && bun run build"
  },
  "keywords": [
    "chatbot",
    "ai",
    "rag",
    "embeddings",
    "openai",
    "hono",
    "chat-widget",
    "customer-support",
    "conversational-ai"
  ],
  "author": "Diego Alto <diego@diegoalto.works>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/diegoaltoworks/chatter.git"
  },
  "bugs": {
    "url": "https://github.com/diegoaltoworks/chatter/issues"
  },
  "homepage": "https://github.com/diegoaltoworks/chatter#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "@libsql/client": "^0.6.0 || ^0.7.0 || ^0.8.0 || ^0.9.0 || ^0.10.0",
    "hono": "^4.0.0 || ^5.0.0",
    "openai": "^4.0.0"
  },
  "dependencies": {
    "jose": "^5.9.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.1.12",
    "@types/node": "^22.9.1",
    "esbuild": "^0.24.0",
    "typescript": "^5.6.3"
  }
}
